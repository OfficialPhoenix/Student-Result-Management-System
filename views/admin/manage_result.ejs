        display: flex;
        flex-wrap: wrap;
        gap: 12px;
      }
      .pagination button{
        border: none;
        float: left;
        padding: 8px 16px;
        background: transparent;
        transition: background-color .3s;
      }
      .pagination button:hover, .pagination button.active{
